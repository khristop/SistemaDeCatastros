        <mapping class="com.igf.entidades.DetalleEmpresaEntity"/>
        <mapping class="com.igf.entidades.DetalleInmuebleEntity"/>
        <mapping class="com.igf.entidades.EmpresaEntity"/>
        <mapping class="com.igf.entidades.InmuebleEntity"/>
        <mapping class="com.igf.entidades.MunicipioEntity"/>
        <mapping class="com.igf.entidades.PropietarioEntity"/>
        <mapping class="com.igf.entidades.PropietarioInmuebleEntity"/>
        <mapping class="com.igf.entidades.RolEntity"/>
        <mapping class="com.igf.entidades.ServicioEntity"/>
        <mapping class="com.igf.entidades.TasaImpuestoEntity"/>
        <mapping class="com.igf.entidades.TipoAreaEntity"/>
        <mapping class="com.igf.entidades.TipoPropietarioEntity"/>
        <mapping class="com.igf.entidades.TipoUsoEntity"/>
        <mapping class="com.igf.entidades.UsuarioEntity"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>